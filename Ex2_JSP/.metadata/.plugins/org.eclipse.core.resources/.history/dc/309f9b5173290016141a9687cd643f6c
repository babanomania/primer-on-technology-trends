package com.babanomania.primertech;

import java.io.IOException;
import java.io.InputStream;
import java.util.HashMap;
import java.util.Map;
import java.util.Properties;

public class QuotesDB {

	private Map<String, String> c = new HashMap<String, String>();
	
	private void init() throws IOException {
		
		InputStream isQuotes = ClassLoader.getSystemResourceAsStream("quotes.properties");
		
		Properties propQuotes = new Properties();
		propQuotes.load(isQuotes);
		
		for (final String quoteType: propQuotes.stringPropertyNames())
			quoteType.put(quoteType, propQuotes.getProperty(quoteType));
	}
	
}
